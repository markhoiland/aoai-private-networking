{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "northcentralus",
            "metadata": {
                "description": "Region where all resources will be deployed."
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "vnet-aoai-test-01",
            "metadata": {
                "description": "The name of the virtual network."
            }
        },
        "virtualNetworkAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "The address prefix for the virtual network."
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "private-endpoint-01",
            "metadata": {
                "description": "Name of the subnet."
            }
        },
        "subnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "description": "IP Address Prefix of the virtual network."
            }
        },
        "openaiName": {
            "type": "string",
            "defaultValue": "aoai-test-01",
            "metadata": {
                "description": "The name of the OpenAI resource."
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "staoaitest01",
            "metadata": {
                "description": "The name of the storage account."
            }
        },
        "cognitiveServicesName": {
            "type": "string",
            "defaultValue": "cog-aoai-test-01",
            "metadata": {
                "description": "The name of the Cognitive Services resource."
            }
        },
        "functionAppName": {
            "type": "string",
            "defaultValue": "func-aoai-test-01",
            "metadata": {
                "description": "The name of the Function App."
            }
        },
        "logicAppName": {
            "type": "string",
            "defaultValue": "logapp-aoai-test-01",
            "metadata": {
                "description": "The name of the Logic App."
            }
        }
    },
    "variables": {
        "openaiPrivateEndpointName": "[concat('pep-',parameters('openaiName'))]",
        "storageAccountPrivateEndpointName": "[concat('pep-',parameters('storageAccountName'))]",
        "cognitiveServicesPrivateEndpointName": "[concat('pep-',parameters('cognitiveServicesName'))]",
        "functionAppPrivateEndpointName": "[concat('pep-',parameters('functionAppName'))]",
        "logicAppPrivateEndpointName": "[concat('pep-',parameters('logicAppName'))]",
        "virtualNetworkSubnetName": "default",
        "openaiSubnetName": "openai",
        "storageAccountSubnetName": "storage",
        "cognitiveServicesSubnetName": "cognitiveservices",
        "functionAppSubnetName": "functionapp",
        "logicAppSubnetName": "logicapp",
        "virtualNetworkSubnetAddressPrefix": "[concat(parameters('virtualNetworkAddressPrefix'), '/24')]",
        "openaiSubnetAddressPrefix": "10.0.1.0/24",
        "storageAccountSubnetAddressPrefix": "10.0.2.0/24",
        "cognitiveServicesSubnetAddressPrefix": "10.0.3.0/24",
        "functionAppSubnetAddressPrefix": "10.0.4.0/24",
        "logicAppSubnetAddressPrefix": "10.0.5.0/24",
        "virtualNetworkId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "virtualNetworkSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('virtualNetworkSubnetName'))]",
        "subnetId": "[concat(variables('virtualNetworkId'), '/subnets/', parameters('subnetName'))]",
        "openaiSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('openaiSubnetName'))]",
        "storageAccountSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('storageAccountSubnetName'))]",
        "cognitiveServicesSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('cognitiveServicesSubnetName'))]",
        "functionAppSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('functionAppSubnetName'))]",
        "logicAppSubnetId": "[concat(variables('virtualNetworkId'), '/subnets/', variables('logicAppSubnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-02-01",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.OpenAI/openais",
            "apiVersion": "2021-06-01-preview",
            "name": "[parameters('openaiName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "dav4",
                "tier": "Standard"
            },
            "properties": {},
            "resources": [
                {
                    "type": "privateEndpoints",
                    "apiVersion": "2021-02-01",
                    "name": "[variables('openaiPrivateEndpointName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "privateLinkServiceConnections": [
                            {
                                "name": "openai",
                                "properties": {
                                    "privateLinkServiceId": "[resourceId('Microsoft.OpenAI/openais', parameters('openaiName'))]",
                                    "groupIds": [
                                        "openai"
                                    ]
                                }
                            }
                        ]
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.OpenAI/openais', parameters('openaiName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {},
            "resources": [
                {
                    "type": "privateEndpoints",
                    "apiVersion": "2021-02-01",
                    "name": "[variables('storageAccountPrivateEndpointName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "privateLinkServiceConnections": [
                            {
                                "name": "storage",
                                "properties": {
                                    "privateLinkServiceId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
                                    "groupIds": [
                                        "blob"
                                    ]
                                }
                            }
                        ]
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2021-04-30-preview",
            "name": "[parameters('cognitiveServicesName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "S0",
                "tier": "Standard"
            },
            "kind": "TextAnalytics",
            "properties": {},
            "resources": [
                {
                    "type": "privateEndpoints",
                    "apiVersion": "2021-02-01",
                    "name": "[variables('cognitiveServicesPrivateEndpointName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "privateLinkServiceConnections": [
                            {
                                "name": "cognitiveservices",
                                "properties": {
                                    "privateLinkServiceId": "[resourceId('Microsoft.CognitiveServices/accounts', parameters('cognitiveServicesName'))]",
                                    "groupIds": [
                                        "cognitiveservices"
                                    ]
                                }
                            }
                        ]
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.CognitiveServices/accounts', parameters('cognitiveServicesName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('functionAppName')]",
            "location": "[parameters('location')]",
            "kind": "functionapp",
            "properties": {},
            "resources": [
                {
                    "type": "privateEndpoints",
                    "apiVersion": "2021-02-01",
                    "name": "[variables('functionAppPrivateEndpointName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "privateLinkServiceConnections": [
                            {
                                "name": "functionapp",
                                "properties": {
                                    "privateLinkServiceId": "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]",
                                    "groupIds": [
                                        "functionapp"
                                    ]
                                }
                            }
                        ]
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('functionAppName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('logicAppName')]",
            "location": "[parameters('location')]",
            "properties": {},
            "resources": [
                {
                    "type": "privateEndpoints",
                    "apiVersion": "2021-02-01",
                    "name": "[variables('logicAppPrivateEndpointName')]",
                    "location": "[parameters('location')]",
                    "properties": {
                        "subnet": {
                            "id": "[variables('subnetId')]"
                        },
                        "privateLinkServiceConnections": [
                            {
                                "name": "logicapp",
                                "properties": {
                                    "privateLinkServiceId": "[resourceId('Microsoft.Logic/workflows', parameters('logicAppName'))]",
                                    "groupIds": [
                                        "logicapp"
                                    ]
                                }
                            }
                        ]
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Logic/workflows', parameters('logicAppName'))]"
                    ]
                }
            ]
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[string('privatelink.openai.azure.com')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(string('privatelink.openai.azure.com'), '/link_to_', toLower(parameters('virtualNetworkName')))]",
            "location": "global",
            "dependsOn": [
                "[string('privatelink.openai.azure.com')]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[variables('virtualNetworkId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[string('privatelink.blob.core.windows.net')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(string('privatelink.blob.core.windows.net'), '/link_to_', toLower(parameters('virtualNetworkName')))]",
            "location": "global",
            "dependsOn": [
                "[string('privatelink.blob.core.windows.net')]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[variables('virtualNetworkId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[string('privatelink.search.windows.net')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(string('privatelink.search.windows.net'), '/link_to_', toLower(parameters('virtualNetworkName')))]",
            "location": "global",
            "dependsOn": [
                "[string('privatelink.search.windows.net')]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[variables('virtualNetworkId')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[string('privatelink.azurewebsites.net')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(string('privatelink.azurewebsites.net'), '/link_to_', toLower(parameters('virtualNetworkName')))]",
            "location": "global",
            "dependsOn": [
                "[string('privatelink.azurewebsites.net')]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "virtualNetwork": {
                    "id": "[variables('virtualNetworkId')]"
                }
            }
        }
    ],
    "outputs": {
        "openaiEndpoint": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Network/privateEndpoints/', variables('openaiPrivateEndpointName'))).privateLinkServiceConnections[0].properties.privateEndpoint]"
        },
        "storageAccountEndpoint": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Network/privateEndpoints/', variables('storageAccountPrivateEndpointName'))).privateLinkServiceConnections[0].properties.privateEndpoint]"
        },
        "cognitiveServicesEndpoint": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Network/privateEndpoints/', variables('cognitiveServicesPrivateEndpointName'))).privateLinkServiceConnections[0].properties.privateEndpoint]"
        },
        "functionAppEndpoint": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Network/privateEndpoints/', variables('functionAppPrivateEndpointName'))).privateLinkServiceConnections[0].properties.privateEndpoint]"
        },
        "logicAppEndpoint": {
            "type": "string",
            "value": "[reference(concat('Microsoft.Network/privateEndpoints/', variables('logicAppPrivateEndpointName'))).privateLinkServiceConnections[0].properties.privateEndpoint]"
        }
    }
}